@model List<Model.dbKunder>

@{
    ViewBag.Title = "AdminKunder";
}
<head>
    <script type="text/javascript">
        $(document).ready(function () {
            $('a[data-sletteModal=true]').click(function () {
                var dataNavn = $(this).data('navn');
                var dataId = $(this).data('id');

                $('#slettNavn').html(dataNavn);

                $('#sletteModalKnapp').click(function () {
                    $.ajax({
                        url: '@Url.Action("SlettKunde", "Admin")',
                        data: { id: dataId },
                        success: function () {
                            $.ajax({
                                url: '@Url.Action("AdminKunder", "Admin")',
                                success: function () {
                                    window.location.reload();
                                }
                            });
                        }
                    });
                });
            });
            $('a[data-endreModal=true]').click(function () {
                var dataBNavn = $(this).data('bn');
                var dataFNavn = $(this).data('fn');
                var dataENavn = $(this).data('en');
                var dataAdr = $(this).data('adr');
                var dataPost = $(this).data('post');
                var dataPSted = $(this).data('ps');
                var dataTlf = $(this).data('tlf');
                var dataId = $(this).data('id');

                $('#endreNavn').html("<tr><td>Brukernavn</td><td><input id='bn' value='" + dataBNavn +"' class='form-control'></input></td><td><p id='bnError'></p></td></tr>"
                    + "<tr><td>Fornavn</td><td><input id='fn' value='" + dataFNavn +"' class='form-control'></input></td><td><p id='fnError'></p></td></tr>"
                    + "<tr><td>Etternavn</td><td><input id='en' value='" + dataENavn +"' class='form-control'></input></td><td><p id='enError'></p></td></tr>"
                    + "<tr><td>Adresse</td><td><input id='ad' value='" + dataAdr +"' class='form-control'></input></td><td><p id='adError'></p></td></tr>"
                    + "<tr><td>Postnr</td><td><input id='post' value='" + dataPost +"' class='form-control'></input></td><td><p id='postError'></p></td></tr>"
                    + "<tr><td>Tlf</td><td><input id='tlf' value='" + dataTlf + "' class='form-control'></input></td><td><p id='tlfError'></p></td></tr>");
                var id = dataId;
                var bn = $('#bn').val();
                var fn = $('#fn').val();
                var en = $('#en').val();
                var ad = $('#ad').val();
                var post = $('#post').val().toString();
                var tlf = $('#tlf').val();
                $('#bn').change(function () {
                    bn = $('#bn').val();
                    if (!bn.match(/^[a-zæøåA-ZÆØÅ0-9]{2,20}$/)) {
                        $('#bnError').html("Ugyldig brukernavn");
                    }
                });
                $('#fn').change(function () {
                    fn = $('#fn').val();
                    if (!fn.match(/^[a-zæøåA-ZÆØÅ0-9]{2,20}$/)) {
                        $('#fnError').html("Ugyldig fornavn");
                    }
                });
                $('#en').change(function () {
                    en = $('#en').val();
                    if (!en.match(/^[a-zæøåA-ZÆØÅ]{2,15}$/)) {
                        $('#enError').html("Ugyldig etternavn");
                    }
                });
                $('#ad').change(function () {
                    ad = $('#ad').val();
                    if (!ad.match(/^[a-zæøåA-ZÆØÅ]{2,15}$/)) {
                        $('#adError').html("Ugyldig adresse");
                    }
                });
                $('#post').change(function () {
                    post = $('#post').val();
                    if (!post.match(/^[0-9]{4}$/)) {
                        $('#postError').html("Ugyldig postnr");
                    }
                });
                $('#tlf').change(function () {
                    tlf = $('#tlf').val();
                    if (!tlf.match(/^[0-9]{8}$/)) {
                        $('#tlfError').html("Ugyldig telefonnummer");
                    }
                });
                $('#endreModalKnapp').click(function () {
                    
                    $(function regex() {
                        if (bn.match(/^[a-zæøåA-ZÆØÅ0-9]{2,20}$/) && fn.match(/^[a-zæøåA-ZÆØÅ]{2,15}$/)
                            && en.match(/^[a-zæøåA-ZÆØÅ]{2,15}$/) && ad.match(/^[a-zæøåA-ZÆØÅ 0-9]{2,20}$/)
                            && post.match(/^[0-9]{4}$/) && postSted.match(/^[a-zæøåA-ZÆØÅ0-9]{2,20}$/) && tlf.match(/^[0-9]{8}$/)) {
                            console.log("regex 2");
                            $.ajax({
                                url: '@Url.Action("EndreKunde", "Admin")',
                                data: { id: id, bn: bn, fn: fn, en: en, ad: ad, post: post, postSted: postSted, tlf: tlf },
                                success: function () {
                                    $.ajax({
                                        url: '@Url.Action("AdminKunder", "Admin")',
                                        success: function () {
                                            window.location.reload();
                                        }
                                    });
                                }
                            });
                        } 
                        
                    });

                });
            });
        });
    </script>
</head>
<body>
    <div id="navbar" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Getflix - Admin", "Admin", "Admin", new { area = "" }, new { @class = "navbar-brand", id = "getflixKnapp" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Kunder", "AdminKunder")</li>
                    <li>@Html.ActionLink("Filmer", "AdminFilm")</li>
                    <li>@Html.ActionLink("Bestilling", "AdminBestilling")</li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    <li>@Html.ActionLink("Logg ut", "LoggUt")</li>
                </ul>
            </div>
        </div>
    </div>

    <h2 class="text-center">Administrer Kunder</h2>
    <br />
    <div>
        <table class="table-striped col-sm-offset-1 col-md-10">
                <tr>
                    <th>Brukernavn</th>
                    <th>Fornavn</th>
                    <th>Etternavn</th>
                    <th>Adresse</th>
                    <th>Postnummer</th>
                    <th>Poststed</th>
                    <th colspan="3">Tlf</th>
                </tr>
            @foreach (var kunde in Model)
            {
                <tr>
                    <td>@kunde.Brukernavn</td>
                    <td>@kunde.Fornavn</td>
                    <td>@kunde.Etternavn</td>
                    <td>@kunde.Adresse</td>
                    <td>@kunde.Postnr</td>
                    <td>@kunde.Poststeder.Poststed</td>
                    <td>@kunde.Tlf</td>
                    <td class="text-right">
                            <a href="#endreModal" class="btn btn-default" id="endreKnapp"
                           data-bn="@kunde.Brukernavn" data-fn="@kunde.Fornavn" data-en="@kunde.Etternavn"
                           data-adr="@kunde.Adresse" data-post="@kunde.Postnr" data-ps="@kunde.Poststeder.Poststed" data-tlf="@kunde.Tlf"
                           data-id="@kunde.Id" data-toggle="modal" data-endreModal="true">Endre</a>
                        <a href="#sletteModal" class="btn btn-danger" id="sletteKnapp"
                           data-navn="@kunde.Brukernavn @kunde.Fornavn @kunde.Etternavn"
                           data-id="@kunde.Id" data-toggle="modal" data-sletteModal="true">Slett</a>
                    </td>
                </tr>
            }
        </table>

        @Html.ActionLink("Registrer ny Kunde","AdminRegistrerKunde", "Admin", new { @class="btn btn-success col-sm-offset-5 col-md-2"})

        @Html.Partial("sletteModal")
        @Html.Partial("endreModal")
        
    </div>
</body>