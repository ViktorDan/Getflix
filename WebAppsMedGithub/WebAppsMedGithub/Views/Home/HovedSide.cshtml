@model List<System.String>

@{
    ViewBag.Title = "HovedSide";
}
<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#FilmListe").load("/Home/Allefilmer");
    });
    function hentFilmAjax() {
        if ($("#IdListe").val() == "Alle Filmer" || $("#IdListe").val() == "Velg Sjanger") {
             $("#FilmListe").load("/Home/Allefilmer");
        } else {
            $("#FilmListe").load("/Home/HentFilm", { Sjanger: $("#IdListe").val() });
        }
    }

</script>
<style>

    img{
        border-radius: 5px;
    }
</style>

<div id="navbar" class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Getflix", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", id = "getflixKnapp" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav pull-right">
                <li>@Html.ActionLink("Logg ut", "LoggUt")</li>
            </ul>
        </div>
    </div>
</div>

<div>
    
    <select id="IdListe" onchange="hentFilmAjax()">
        @foreach (var Sjanger in Model)
        {
            <option>@Sjanger</option>
        }
    </select>
</div>
<br />

<div id="FilmListe">

</div>